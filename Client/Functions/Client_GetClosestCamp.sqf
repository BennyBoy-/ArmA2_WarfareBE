/*	Return the closest depot of the given entitie.	 Parameters:		- Object		- Range		- Ignore camp side ID*/Private ["_closest","_near","_pos","_range"];_closest = objNull;_pos = _this select 0;_range = _this select 1;_ignore_side = if (count _this > 2) then {_this select 2} else {false};_near = _pos nearEntities [WFBE_Logic_Camp, _range];{	if !(isNil {_x getVariable "sideID"}) then {		if (alive(_x getVariable "wfbe_camp_bunker")) then {			if (_ignore_side) then {				_closest = _x;			} else {				if ((_x getVariable "sideID") == sideID) then {_closest = _x;};			};		};	};} forEach _near;_closest